<div class = "card">
   <h3 class = "card-header">Edit Post</h3>
   <form class = "card-body edit-post-form" id = "edit-post-form">
      <label for = "post-title" class = "form-label">Post Title</label>
      <input name = "post-title" type = "text" value = "{{ post.title }}" class = "form-input" />
      <label class = "form-label" for = "post-content">Post Content</label>
      <input name = "post-content" type = "text" value = "{{post.content}}" class = "form-input" />
      <button type = "submit" class = "button link-button">Update This Post</button>
      <button type = "button" class = "delete-post-button button link-button">Delete This Post</button>
   </form>
</div>


<script src = "/javascript/edit-post.js"></script>
<script src = "/javascript/delete-post.js"></script>